  <div class="mx-auto" style="width: 200px;">
    <h1>Products</h1>
  </div>
    <div class="bd-table" >
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Id:</th>
          <th scope="col">Category:</th>
          <th scope="col">Brand:</th>
