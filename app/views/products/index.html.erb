          <th scope="col">Old price:</th>
          <th scope="col">Keywords:</th>
          <th scope="col">Description:</th>
          <th scope="col">Picture:</th>

        </tr>
        </thead>
        <tbody>
          <div id="products">
            <% @products.each do |product| %>

              <%= render product %>

            <% end %>
          </div>
        </tbody>
      </table>
    </div>

